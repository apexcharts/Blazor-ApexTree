@page "/"

<PageTitle>Home - BlazorApexTree</PageTitle>

<h1>Welcome to BlazorApexTree Examples</h1>

<div class="intro">
    <p>
        BlazorApexTree is a Blazor wrapper for the <a href="https://github.com/apexcharts/tree" target="_blank">ApexTree</a> library.
        It allows you to create beautiful organizational and hierarchical charts in your Blazor applications.
    </p>

    <h2>Installation</h2>
    <pre><code>dotnet add package BlazorApexTree</code></pre>

    <h2>Quick Example</h2>
    <pre><code>@@page "/tree"
@@using BlazorApexTree
@@using BlazorApexTree.Models

&lt;ApexTree Options="@@options" Data="@@data" /&gt;

@@code {
    private TreeOptions options = new()
    {
        Width = 800,
        Height = 600,
        Direction = "top",
        NodeWidth = 150,
        NodeHeight = 80
    };

    private NodeData data = new()
    {
        Id = "1",
        Name = "CEO",
        Children = new List&lt;NodeData&gt;
        {
            new() { Id = "2", Name = "CTO" },
            new() { Id = "3", Name = "CFO" }
        }
    };
}
</code></pre>
</div>

